<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_learn_by_image"
    tools:context=".activity.ListenAndWriteActivity">

    <!-- Header + từ vựng -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headerChonBanDich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn bản dịch"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_word"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="want"
                android:layout_marginTop="6dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <!-- Ảnh minh họa căn giữa dưới LinearLayout -->
    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/iillustrationimage"
        android:scaleType="fitCenter"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Header + từ vựng -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illustrationImage">

        <Button
            android:id="@+id/button_meaning_one"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="muốn"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E0F7FA"
            android:textColor="#000000"
            android:textSize="18sp"
            android:alpha="0.9"/>

        <Button
            android:id="@+id/button_meaning_two"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="ngủ"
            android:backgroundTint="#E0F7FA"
            android:textColor="#000000"
            android:textSize="18sp"
            android:alpha="0.9" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
