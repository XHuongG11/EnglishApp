<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <!-- ScrollView bọc toàn bộ nội dung (trừ thanh điều hướng dưới cùng) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Thanh trên cùng -->
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <!-- Tiến độ (0%) -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_progress_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp"
                        android:text="0%"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </FrameLayout>


                <!-- Tiêu đề Oceans English -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/welcome_whale"
                        android:contentDescription="Whale Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OCEANS"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENGLISH"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp" />
                </LinearLayout>

                <!-- Ảnh đại diện người dùng -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/avt_icon"
                    android:contentDescription="User Avatar"
                     />
            </LinearLayout>

            <!-- Phần tiến độ học tập -->
            <LinearLayout
                android:id="@+id/progress_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Vòng cung tiến độ -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:layout_marginRight="10dp">

                    <!-- Vòng cung tiến độ nằm giữa -->
                    <ImageView
                        android:id="@+id/progress_arc"
                        android:layout_width="241dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/progress_arc"
                        android:scaleType="fitXY" />

                    <!-- Nội dung nằm giữa vòng cung -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="20dp"> <!-- chỉnh padding để nội dung đúng giữa vòng -->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:src="@drawable/flame_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:textColor="#7A7878" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHUỖI NGÀY"
                            android:textSize="12sp"
                            android:textColor="#888" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="0dp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cấp độ 1"
                                android:textColor="#171717"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:backgroundTint="#FFFFFF"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="8dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/coin_icon"
                                android:layout_marginLeft="40dp"
                                android:layout_marginBottom="0dp"
                                android:contentDescription="Coin Icon" />

                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Phần bài học -->
            <LinearLayout
                android:layout_width="301dp"
                android:layout_height="301dp"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/lesson_card_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bài Học 1"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thi hiện tại: câu khẳng định"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"
                    android:contentDescription="Stars Icon"
                    android:layout_marginTop="8dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt đầu"
                    android:textColor="#171717"
                    android:backgroundTint="#FFFFFF"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>