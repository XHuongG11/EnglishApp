<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <!-- Header với "OCEANS ENGLISH" -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <!-- Hàng 1: Hình ảnh cá voi và "OCEANS" (xếp ngang) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="70dp">

            <!-- Hình ảnh cá voi -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/welcome_whale"
                android:contentDescription="Whale Icon" />

            <!-- Dòng chữ "OCEANS" -->
            <TextView
                android:id="@+id/oceansText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCEANS"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Hàng 2: Dòng chữ "ENGLISH" -->
        <TextView
            android:id="@+id/englishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENGLISH"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="90dp"/>

    </LinearLayout>

    <!-- Hình ảnh các con cá -->
    <ImageView
        android:id="@+id/fish1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/whale_vui"
        android:contentDescription="Fish 1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-160dp" />

    <ImageView
        android:id="@+id/fish2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/turtle_vui"
        android:contentDescription="Fish 2"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-160dp"
        android:layout_marginTop="200dp" />

    <ImageView
        android:id="@+id/fish3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/puffer_vui"
        android:contentDescription="Fish 3"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-160dp"
        android:layout_marginTop="400dp" />
    <ImageView
        android:id="@+id/fish4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:rotation="-30"
        android:src="@drawable/octopus_vui"
        android:contentDescription="Fish 4"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-160dp"
        android:layout_marginTop="400dp" />

    <!-- Hình ảnh các bọt biển -->
    <ImageView
        android:id="@+id/bubble1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/splash_bubble"
        android:contentDescription="Bubble 1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="-20dp" />

    <ImageView
        android:id="@+id/bubble2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/splash_bubble"
        android:contentDescription="Bubble 2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="-15dp" />

    <ImageView
        android:id="@+id/bubble3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/splash_bubble"
        android:contentDescription="Bubble 3"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginBottom="-25dp" />

    <ImageView
        android:id="@+id/bubble4"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/splash_bubble"
        android:contentDescription="Bubble 4"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="350dp"
        android:layout_marginBottom="-18dp" />

    <ImageView
        android:id="@+id/bubble5"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/splash_bubble"
        android:contentDescription="Bubble 5"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="450dp"
        android:layout_marginBottom="-22dp" />

</RelativeLayout>