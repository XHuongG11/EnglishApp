<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme cho Dialog -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Hiệu ứng animation cho Dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@null</item>
        <item name="itemTextColor">@null</item>
        <item name="itemRippleColor">@null</item>
    </style>
</resources>